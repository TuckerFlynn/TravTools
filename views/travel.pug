extends layout

block content
  div.row
    div.col-sm-12
      h1= title
      p Path speed calculator.
  div.row
    form#form(method='POST' action='')
      table.table.table-sm
        tr
          td
            label(for="version") Version:
          td
            input.form-control(type="radio" name="version" value='1') 
            |  Legends
          td
            input.form-control(type="radio" name="version" value='2' checked) 
            |  Fire and Sand
        tr
          td 
            label(for="xStart") Start:
          td
            input#xStart.form-control(type='text', name='xStart' value='x' style="text-align:right")
          td
            input#yStart.form-control(type='text', name='yStart' value='y')
        tr
          td
            label(for="xTarget") Target:
          td
            input#xTarget.form-control(type='text', name='xTarget' value='x' style="text-align:right")
          td
            input#yTarget.form-control(type='text', name='yTarget' value='y')
        tr
          td
            label(for="speed") Speed:
          td
            input#speed.form-control(type="text" style="text-align:right")
          td
            select#quickSpeed
              option(selected disabled hidden) Troop Speed
              optgroup(label="Troop Speed")
                option(value='3') 3 Fire Catapult, Catapult, Trebuchet, Stone Catapult
                option(value='4') 4 Battering Ram, Ram, Senator, Chief, Nomarch
                option(value='5') 5 Praetorian, Settler, Chieftain, Logades
                option(value='6') 6 Legionnaire, Axeman, Swordsman, Ash Warden, Mercenary, Bowman
                option(value='7') 7 Imperian, Clubswinger, Spearman, Phalanx, Slave Militia, Khopesh Warrior
                option(value='9') 9 Scout, Teutonic Knight
                option(value='10') 10 Equites Caesaris, Paladin, Resheph Chariot
                option(value='13') 13 Haeduan
                option(value='14') 14 Equites Imperatoris, Marauder
                option(value='15') 15 Anhur Guard
                option(value='16') 16 Equites Legati, Druidrider, Sopdu Explorer, Steppe Rider, Marksman
                option(value='17') 17 Pathfinder
                option(value='19') 19 Theutates Thunder, Spotter
        tr
          td
            label(for='tsBonus') TS Lvl:
          td
            select#tsBonus.form-control
              option(value='0') -
              option(value='0.1') 1
              option(value='0.2') 2
              option(value='0.3') 3
              option(value='0.4') 4
              option(value='0.5') 5
              option(value='0.6') 6
              option(value='0.7') 7
              option(value='0.8') 8
              option(value='0.9') 9
              option(value='1.0') 10
              option(value='1.1') 11
              option(value='1.2') 12
              option(value='1.3') 13
              option(value='1.4') 14
              option(value='1.5') 15
              option(value='1.6') 16
              option(value='1.7') 17
              option(value='1.8') 18
              option(value='1.9') 19
              option(value='2.0') 20
        tr
          td
            label(for='heroBonus') Hero Bonus:
          td
            select#heroBonus.form-control
              option(value='0') -
              option(value='0.25') 25%
              option(value='0.5' ) 50%
              option(value='0.75') 75%
        tr
          td
            label(for='artiBonus') Arti Bonus:
          td
            select#artiBonus.form-control
              option(value='1') -
              option(value='1.5') x1.5
              option(value='2') x2
              option(value='3') x3
      button.btn.btn-primary(type='submit') Submit
  hr